  "devDependencies": {
    "electron": "^1.8.4",
    "electron-icon-maker": "0.0.4",
    "electron-installer-dmg": "^0.2.1",
    "electron-packager": "^12.0.0"
  },
  "dependencies": {
    "electron-default-menu": "^1.0.1"
  }
}
